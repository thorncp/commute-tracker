<div id="alerts">
  <% flash.each do |key, value| %>
    <%= content_tag :div, class: "alert alert-dismissable #{alert_class_for(key)}" do %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= value %>
    <% end %>
  <% end %>
</div>
